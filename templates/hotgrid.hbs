<div class="component-inner hotgrid-inner" role="region" aria-label="{{_accessibility._ariaRegions.hotGrid}}" {{#if _accessibility._ariaRegions.hotGrid}}tabindex="0"{{/if}}>
    {{> component this}}
    <div class="component-widget hotgrid-widget">

        <div class="hotgrid-grid">
            <div class="hotgrid-grid-inner clearfix">
                {{#each _items}}
                <div class="hotgrid-grid-item">
                    {{#if _graphic.hasImageStates}} 
                        <a href="#" class="hotgrid-item-image hotgrid-item-states-image" role="button" aria-label="{{title}}">                                                 
                            <img src="{{_graphic.src}}" alt="{{_graphic.alt}}"/>
                            <img src="{{_graphic.srcHover}}" class="hotgrid-item-image-hover" alt="{{_graphic.alt}}"/>
                            <img src="{{_graphic.srcVisited}}" class="hotgrid-item-image-visited" alt="{{_graphic.alt}}"/>                                          
                        </a>
                        <div class="hotgrid-item-title">{{_graphic.title}}</div>   
                    {{else}}
                        <a href="#" class="hotgrid-item-image hotgrid-item-states-css" aria-label="{{title}}" role="button">
                             <img src="{{_graphic.src}}" class="" alt="{{_graphic.alt}}" title="{{_graphic.title}}"/>
                        </a>
                        <div class="hotgrid-item-title">{{_graphic.title}}</div>
                    {{/if}}                                        
                </div>
                {{/each}}
            </div>
        </div>

        <div class="hotgrid-shadow"></div>

        <div class="hotgrid-content">
            <div class="hotgrid-content-inner">
                {{#each _items}}
                <div class="hotgrid-content-item component-item">
                    <div class="hotgrid-content-item-inner component-item-inner clearfix">

                        <div class="hotgrid-contents">
                            <div class="hotgrid-contents-inner">
                                {{#if title}}
                                    <div class="hotgrid-content-title h5" role="heading" tabindex="0">
                                        {{{title}}}
                                    </div>
                                {{/if}}
                                {{#if body}}
                                    <div class="hotgrid-content-body">
                                        {{{a11y_text body}}}
                                    </div>
                                {{/if}}
                            </div>
                        </div>

                        <div class="hotgrid-item-graphic">
                            <img src="{{_itemGraphic.src}}" alt="{{_itemGraphic.alt}}"/>
                        </div>

                    </div>
                </div>
                {{/each}}
                <div class="content-popup-done clearfix">
                    <a href="#" class="content-popup-icon-close icon icon-cross" role="button" aria-label="{{_accessibility._ariaLabels.hotgridPopUp}}"></a>
                </div>
            </div>
        </div>

    </div>
</div>